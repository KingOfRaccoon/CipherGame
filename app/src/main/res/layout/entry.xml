<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_conf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/confrontation"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/image_conf"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Конкурирующая компания «Стела» отказала
         корпорации «Индекс» в контракте по передаче
         данных посередине сделки. Данные были переданы,
         но на них наложен шифр.
         Как ни странно, «Индекс» резко начал нанимать шифровальщиков,
          не сильно заботясь о качестве, и вам удалось проскочить
           на стажировку."
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>